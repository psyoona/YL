<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css?v=@ViewBag.Cacheversion" />
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css?v=@ViewBag.Cacheversion" />
		<link rel="stylesheet" href="~/css/urlConversion.css?v=@ViewBag.Cacheversion" />

		<title>URL Conversion</title>
	</head>
	<body>
		@* Navigation Bar *@
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Base Converter</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" 
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="/Laboratory/BaseConversion">Base conversion</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Laboratory/UrlConversion">URL Converter</a>
						</li>
						<li class="nav-item">
						<a class="nav-link" href="/Laboratory/Tetris">Tetris</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		@* Main Content *@
		<div class="container d-flex full-height">
			<div class="container py-5">
				<div class="card shadow-lg">
					<div class="card-header bg-primary text-white text-center">
						<h2><i class="fa-solid fa-shuffle"></i>&nbsp;URL Converter</h2>
					</div>
					<div class="card-body">
						<form>
							<div class="mb-3">
								<label for="plainText" class="form-label fw-bold">Plain Text</label>
							<textarea id="plainText" type="text" class="form-control" placeholder="Enter a plain text"></textarea>
							</div>

							<div class="mb-3">
								<label for="encodedUrl" class="form-label fw-bold">Encode URL</label>
								<textarea id="encodedUrl" type="text" class="form-control" placeholder="Enter a encoded url"></textarea>
							</div>

							<div class="mb-3">
								<label for="decodedUrl" class="form-label fw-bold">Decode URL</label>
								<textarea id="decodedUrl" type="text" class="form-control" placeholder="Enter an decoded url"></textarea>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

		<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3233977220678426" crossorigin="anonymous"></script>

		@* 수직형광고1 *@
		<ins class="adsbygoogle"
			 style="display:block"
			 data-ad-client="ca-pub-3233977220678426"
			 data-ad-slot="8072160232"
			 data-ad-format="auto"
			 data-full-width-responsive="true"></ins>
		<script>
			 (adsbygoogle = window.adsbygoogle || []).push({});
		</script>

		<script defer src="~/lib/fontawesome/js/all.min.js?v=@ViewBag.Cacheversion"></script>
		<script defer src="~/lib/jquery/dist/jquery.min.js?v=@ViewBag.Cacheversion"></script>
		<script defer src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js?v=@ViewBag.Cacheversion"></script>
		<script defer src="~/lib/moment/moment.js?v=@ViewBag.Cacheversion"></script>
		<script defer src="~/lib/security/sha512.min.js?v=@ViewBag.Cacheversion"></script>

		<script defer src="~/js/Common/screenUtility.js?v=@ViewBag.Cacheversion"></script>
		<script defer src="~/js/Common/stringUtility.js?v=@ViewBag.Cacheversion"></script>
		<script defer src="~/js/Common/webServer.js?v=@ViewBag.Cacheversion"></script>
		<script defer src="~/js/Common/format.js?v=@ViewBag.Cacheversion"></script>

		<script defer src="~/js/UrlConversion/UrlConversion.js?v=@ViewBag.Cacheversion"></script>
	</body>
</html>