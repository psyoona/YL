@{
	Layout = "~/Views/Shared/_NoLoginLayout.cshtml";
}

<div class="container py-4">
	<div class="card shadow-sm mb-4 border-0">
		<div class="card-header bg-primary bg-gradient text-white text-center">
			<h5 class="mb-0">암호화 방식 선택 및 키 입력</h5>
		</div>
		<div class="card-body">
			<div class="row g-3 align-items-center">
				<div class="col-md-2 text-end fw-semibold">방식</div>
				<div class="col-md-4">
					<select id="encryptType" class="form-select">
						<option value="1">AES256</option>
						<option value="2">SHA512</option>
						<option value="3">TDES256</option>
					</select>
				</div>
				<div class="col-md-2 text-end fw-semibold">암호키</div>
				<div class="col-md-4">
					<input id="encryptKey" class="form-control" placeholder="암호키 입력" />
				</div>
			</div>
		</div>
	</div>

	<div class="card shadow-sm mb-4 border-0">
		<div class="card-header bg-dark text-white text-center">
			<h5 class="mb-0" title="→ 버튼 클릭 시 암호화됩니다." data-bs-toggle="tooltip" data-bs-placement="top">
				암호화
			</h5>
		</div>
		<div class="card-body">
			<div class="row g-3">
				<div class="col-md-5">
					<textarea id="plainText" class="form-control" rows="6" placeholder="평문을 입력하세요..."></textarea>
				</div>
				<div class="col-md-2 d-flex justify-content-center align-items-center">
					<button id="encryptButton" class="btn btn-outline-primary btn-lg" title="클릭 시 평문이 암호화됩니다.">
						<i class="fa-solid fa-arrow-right"></i>
					</button>
				</div>
				<div class="col-md-5">
					<textarea id="encryptResult" class="form-control" rows="6" readonly placeholder="암호문 출력 영역"></textarea>
				</div>
			</div>
		</div>
	</div>

	<div class="card shadow-sm border-0">
		<div class="card-header bg-dark text-white text-center">
			<h5 class="mb-0" title="→ 버튼 클릭 시 복호화됩니다." data-bs-toggle="tooltip" data-bs-placement="top">
				복호화
			</h5>
		</div>
		<div class="card-body">
			<div class="row g-3">
				<div class="col-md-5">
					<textarea id="encryptedText" class="form-control" rows="6" placeholder="암호문을 입력하세요..."></textarea>
				</div>
				<div class="col-md-2 d-flex justify-content-center align-items-center">
					<button id="decryptButton" class="btn btn-outline-primary btn-lg" title="클릭 시 암호문이 복호화됩니다.">
						<i class="fa-solid fa-arrow-right"></i>
					</button>
				</div>
				<div class="col-md-5">
					<textarea id="decryptResult" class="form-control" rows="6" readonly placeholder="복호문 출력 영역"></textarea>
				</div>
			</div>
		</div>
	</div>

</div>


<script defer src="~/js/EncryptionTool/EncryptionTool.js?v=@ViewBag.Cacheversion"></script>